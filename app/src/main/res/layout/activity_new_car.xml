<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".new_car">
     <android.support.v7.widget.Toolbar
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize">
         <Button
             android:id="@+id/back1_button"
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:background="@drawable/back_button" />
     </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/group_17"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_cust_edittext"
        android:drawableStart="@drawable/new_cust_profile"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_cust_edittext"
        android:drawableStart="@drawable/new_cust_phone"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
      />

    <EditText
        android:id="@+id/vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_cust_edittext"
        android:hint="@string/number_plate"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal">

        <Spinner
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner"
            android:padding="5dp"
           />

        <Spinner
            android:id="@+id/fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner"
            android:padding="5dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/vehicle_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_cust_edittext"
        android:hint="@string/model"
        android:padding="25dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/save_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_car_save_button"
        android:layout_gravity="center_horizontal"
        android:onClick="saveCarHandler"
        />



</LinearLayout>